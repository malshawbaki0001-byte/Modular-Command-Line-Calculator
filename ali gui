    result = login_window.exec()

    if result == QDialog.DialogCode.Accepted:
        current_user = login_window.current_user_id 
        current_role = login_window.current_user_role
        
        is_dark = login_window.is_dark_mode
        
        if current_role == 'student':
            main_app_window = RegistrationApp(current_user) 
            main_app_window.is_dark_mode = is_dark 
            if is_dark: 
                main_app_window.theme_button.setText("â˜€ï¸")
            main_app_window.show()
        elif current_role == 'doctor':
            doctor_window = DoctorDashboard(current_user)
            doctor_window.is_dark_mode = is_dark 
            if is_dark: 
                doctor_window.theme_button.setText("â˜€ï¸")
            doctor_window.show()
            
        sys.exit(app.exec())
    else:
        sys.exit(0)
